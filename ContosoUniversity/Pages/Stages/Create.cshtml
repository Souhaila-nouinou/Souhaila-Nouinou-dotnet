@page
@model ContosoUniversity.Pages.Stages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stage.EnseignantID" class="control-label"></label>
                <input asp-for="Stage.EnseignantID" class="form-control" />
                <span asp-validation-for="Stage.EnseignantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.SignatureValidation" class="control-label"></label>
                <input asp-for="Stage.SignatureValidation" class="form-control" />
                <span asp-validation-for="Stage.SignatureValidation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.sujet" class="control-label"></label>
                <input asp-for="Stage.sujet" class="form-control" />
                <span asp-validation-for="Stage.sujet" class="text-danger"></span>
            </div>

            <div asp-for="Stage.Enseignant" class="form-group">
                    <label  class="control-label"></label>
                <select asp-for="Stage.EnseignantID" class="form-control"
                   asp-items="@Model.ProfList" >
                    <option value="">-- Select Prof --</option>
                </select>
                <span asp-validation-for="Stage.EnseignantID" class="text-danger" />
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
